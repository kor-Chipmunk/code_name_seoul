<div class="long">
  <%= form_tag '/answer', id: 'form', class: "text-center", remote: true, :onsubmit => "checkanswer3()" do %>
    <div class="question">
      <input type="text" required placeholder="1"/>
      <input type="text" required placeholder="2"/>
      <input type="text" required placeholder="3"/>
      <input type="text" required placeholder="4"/>
    </div>
    <h1><strong>띄어쓰기</strong> 없이 입력하시오.</h1>
    <%= hidden_field_tag 'answer' %>
    <%= submit_tag '확인', id: "getBtn" %>
  <% end %>
</div>
